<%= link_to "新しく旅行地を登録する", new_destination_path, class: "btn btn-default btn-block" %>
<hr>

<% if current_user %>
  <div class="panel panel-warning">
    <div class="panel-body">
      <div class="media">
        <div class="media-left">
             <% if current_user.image? %>
              <div class="thumbnail">
                <%= image_tag current_user.image.url %>
              </div>
            <% end %>
        </div>
        <div class="media-body">
          <p>ようこそ <%= current_user.family_name %> さん</p>
          <p>口コミ：<%= current_user.reviews.count %>件</p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="panel panel-warning">
  <div class="panel-heading">
    人気の旅行地
  </div>
 <!-- List group -->
  <ul class="list-group">
    <li class="list-group-item"></li>
    <li class="list-group-item">日光</li>
    <li class="list-group-item">今あぶない箱根</li>
    <li class="list-group-item">うさぎがいっぱい因幡</li>
  </ul>
</div>
